FROM centos:7
LABEL app="Student-App"
LABEL Developer="Nirmal Omkar"
USER root
WORKDIR /opt/

ADD https://dlcdn.apache.org/tomcat/tomcat-8/v8.5.99/bin/apache-tomcat-8.5.99.tar.gz .
RUN tar -xzvf apache-tomcat-8.5.99.tar.gz 
RUN yum install java -y
WORKDIR /opt/apache-tomcat-8.5.99
COPY WebApp-Files/student.war   webapps/student.war
COPY context.xml conf/context.xml
COPY WebApp-Files/mysql-connector.jar lib/mysql-connector.jar
EXPOSE 8080

CMD ["bin/catalina.sh" , "run"]
